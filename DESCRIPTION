Package: Capsule
Type: Package
Title: Comprehensive Reproducibility Framework for R and Bioinformatics Analysis
Version: 0.2.0
Authors@R: person(given = "Abu",
                  family = "SAADAT",
                  role = c("aut", "cre"),
                  email = "saadatabu1996@gmail.com",
                  comment = c(ORCID = "https://orcid.org/0000-0001-9636-2513",
